alias a='ssh admin1'
alias bc='bundle check'
alias be='bundle exec'
alias bi='bundle install  --local --path vendor/bundle'
alias commit='git commit -am'
alias lg='git lg | head'
alias m='cd ~/richard/modules/'
alias n='cd ~/richard/nodes/'
alias nocolor='sed -r "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g"'
alias p='cd ~/production'
alias pick='git cherry-pick'
alias pull='git pull --recurse-submodules=yes'
alias push='git push'
alias r='cd ~/richard'
alias rebase='git pull --rebase'
alias smpull='git submodule foreach git pull origin master'
alias smupdate='git submodule update --init --recursive'
alias v='vagrant'
